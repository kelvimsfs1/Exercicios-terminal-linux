#!/bin/bash 

#(echo comando para mostrar o texto indicado entre aspas).
echo "Kelvim" 

#(comando para salvar o arquivo).
ESC+:WQ  

#(comando para tornar o arquivo executavel).
chmod a+x cliente1.txt 

